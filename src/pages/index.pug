extends ../pug/layout.pug

append config
  -
    currentTitle = 'Wine house'
    currentDescription = 'Wine house website'
    currentUrl = 'index.html'

block content
  section.hero#hero
    .section-wrapper.hero__wrapper
      .hero__heading-wrapper
        h1.hero__heading The best wines around the world
  ///.hero

  section.sale#sale
    .sale__wrapper.section-wrapper
      .sale__order
        +picture({
          'img': 'sale-01',
          'alt': 'Sale bag',
          'lg': false,
          'ext': 'png'
        }, 'sale__img').sale__img-wrapper.sale__img-wrapper--bag
        +btn('order now!').sale__btn(href='#')
      +picture({
        'img': 'sale-02',
        'alt': 'Wine Bottle',
        'lg': false,
        'ext': 'png'
      }, 'sale__img').sale__img-wrapper.sale__img-wrapper--bottle
  ///.sale

  section.wineyards#wineyards
    .wineyards__wrapper.section-wrapper
      h2.wineyards__heading the best quality
      +picture({
        'img': 'wineyards-01',
        'alt': 'Grapes Frame',
        'lg': false,
        'ext': 'png'
      }, 'wineyards__img').wineyards__img-wrapper.wineyards__img-wrapper--frame
      +picture({
        'img': 'wineyards-02',
        'alt': 'Grapes',
        'lg': false,
        'ext': 'png'
      }, 'wineyards__img').wineyards__img-wrapper.wineyards__img-wrapper--grapes
  ///.wineyards
